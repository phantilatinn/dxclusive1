<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dxclusive.MainPage"
             BackgroundColor="#FFA74D">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
        <Image Source="logo.png" WidthRequest="150" HeightRequest="150" />
        <Label Text="DXCLUSIVE" FontSize="24" TextColor="White" HorizontalOptions="Center" />
        <Frame BackgroundColor="White" CornerRadius="10" Padding="10" Margin="20">
            <Entry Placeholder="STUDENT ID" FontSize="18" />
        </Frame>
        <Button Text="Start" FontSize="18" TextColor="White" BackgroundColor="#B22222" CornerRadius="20"
                Clicked="OnStartButtonClicked"/>
        <Label Text="COLLEGE OF INNOVATION" FontSize="12" TextColor="White" HorizontalOptions="Center" Margin="10" />
        <Label Text="THAMMASAT UNIVERSITY" FontSize="12" TextColor="White" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>